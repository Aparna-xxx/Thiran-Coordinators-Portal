<!-- details.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participant details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/details.css" rel="stylesheet">
</head>

<body>
    <header class="mx-3 my-3 poppins-regular bg-black custom-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white navB">
            <div class="container mydiv">
                <a class="navbar-brand text-black" href="#"> <b>
                        <%= eventName %>!
                    </b> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-black" href="#" role="button" id="navbarDropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end bg-black" aria-labelledby="navbarDropdown">
                                <li>
                                    <form id="homeForm" action="/home" method="get">
                                        <input type="hidden" name="eventName" value="<%= eventName %>">
                                        <button type="submit" class="dropdown-item text-white">Home</button>
                                    </form>
                                </li>
                                <li>
                                    <form id="attendanceForm" action="/attendance" method="get">
                                        <input type="hidden" name="eventName" value="<%= eventName %>">
                                        <button type="submit" class="dropdown-item text-white">Update
                                            attendance</button>
                                    </form>
                                </li>
                                <li>
                                    <form id="winnerForm" action="/winner" method="get">
                                        <input type="hidden" name="eventName" value="<%= eventName %>">
                                        <button type="submit" class="dropdown-item text-white">Update Winners</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <section id="title">
        <span class="fw-normal text-white poppins-regular" id="head-text">Participant Details</span>
    </section>

    <section id="details" class="mx-3 my-3">
        <table class="table" id="details-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">reg-ID</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Year</th>
                    <th scope="col">Attended</th>

                </tr>
            </thead>
            <tbody>
                <% participants.forEach((participant, index)=> { %>
                    <tr class="<%= participant.attended ? 'table-success' : '' %>">
                        <th scope="row">
                            <%= index + 1 %>
                        </th>
                        <td>
                            <%= participant.regId %>
                        </td>
                        <td>
                            <%= participant.eMail %>
                        </td>
                        <td>
                            <%= participant.name %>
                        </td>
                        <td>
                            <%= participant.dept %>
                        </td>
                        <td>
                            <%= participant.year %>
                        </td>
                        <td>
                            <%= participant.attended %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>