    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
</head>

<body>
    <section id="menu">
        <div class="sidebar">
            <!-- <form id="codesprint" class="menu-item" action="" method="get">
                <input type="hidden" name="eventName" value="">
                <button type="submit" class="text-black btn">DASHBOARD</button>
            </form> -->
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="CODESPRINT">
                <button type="submit" class="text-black btn">CODESPRINT</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="CRICKBID AUCTION">
                <button type="submit" class="text-black btn">CRICKBID AUCTION</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="CTRL ALT QODE">
                <button type="submit" class="text-black btn">CTRL + ALT + QODE</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="FORTRESS CTF">
                <button type="submit" class="text-black btn">FORTRESS CTF</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="LAST STAND - [FALL GUYS]">
                <button type="submit" class="text-black btn">LAST STAND (F)</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="LAST STAND [Valorant]">
                <button type="submit" class="text-black btn">LAST STAND (V)</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="NETHUNT">
                <button type="submit" class="text-black btn">NETHUNT</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="TRIPLE TROUBLE">
                <button type="submit" class="text-black btn">TRIPLE TROUBLE</button>
            </form>
            <form id="codesprint" class="menu-item" action="/event" method="get">
                <input type="hidden" name="eventName" value="WITTY MINDZ">
                <button type="submit" class="text-black btn">WITTY MINDZ</button>
            </form>
            <form id="codesprint" class="menu-item" action="/star" method="get">
                <input type="hidden" name="eventName" value="STAR OF THIRAN">
                <button type="submit" class="text-black btn">STAR OF THIRAN</button>
            </form>
        </div>
    </section>

<section id="content">
    <section id="title">
        <span class="fw-normal text-white poppins-regular" id="head-text"> <%= eventName %> </span>
    </section>

    <section id="details" class="mx-3 my-3">
        <% if (typeof eventName !== 'undefined' && eventName !== "Secretary" && eventName) { %>
            
            <% if (eventName === "STAR OF THIRAN") { %>
                <table class="table" id="details-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">regId</th>
                            <th scope="col">Name</th>
                            <th scope="col">Event Name</th>
                            <th scope="col">Department</th>
                            <th scope="col">Place</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Attended</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% winners.forEach((winner, index) => { %>
                            <tr class="<%= winner.attended ? 'table-success' : '' %>">
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= winner._id %></td>
                                <td><%= winner.name %></td>
                                <td><%= winner.eventName %></td>
                                <td>  <%= winner.dept %>
                                      <%= winner.programme %> </td>
                                <td><%= winner.place %></td>
                                <td><%= winner.phone %></td>
                                <td><%= winner.attended %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <table class="table" id="details-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">reg-ID</th>
                            <th scope="col">E-Mail</th>
                            <th scope="col">Name</th>
                            <th scope="col">Department</th>
                            <th scope="col">Year</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Attended</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach((participant, index) => { %>
                            <tr class="<%= participant.attended ? 'table-success' : '' %>">
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= participant._id %></td>
                                <td><%= participant.email %></td>
                                <td><%= participant.name %></td>
                                <td> <%= participant.prog %>
                                    <%= participant.dept %> -
                                    <%= participant.year %>  </td>
                                <td><%= participant.year %></td>
                                <td><%= participant.phone %></td>
                                <td><%= participant.attended %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        <% } else { %>
            <!-- Add a message or placeholder content if eventName is not defined -->
            <p>No participant details available.</p>
        <% } %>
        
        
    </section>
</section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>